<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
        <%= form_for @user, url: login_path, method: :post do |f| %> 
            <div class="field">
                <%= f.label :name %> 
                <%= f.text_field :name %> 
            </div> 
            <div class="field">
                <%= f.label :password %> 
                <%= f.password_field :password %> 
            </div> 
            <div class="actions"> 
                <%= f.submit "Log In" %> 
                Or <%= link_to(controller: 'users', action: 'new') { 'Sign Up' } %> 
            </div> 
        <% end %> 
   </div>
  </div>
</div>